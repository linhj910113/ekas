@model IEnumerable<AppointmentSystem.Models.ViewModels.SystemModels.LabelIndexVM>
@{
    ViewData["Title"] = "標籤管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card whiteBG mb-4 pattern-F colorset_B">
    <div class="card-header">
        <h3 class="card-title font-weight-bold">@ViewData["Title"]</h3>
    </div>

    <div class="card whiteBG pattern-F colorset_3">
        <div class="card-body">
            <div class="table-responsive" style="overflow-x: unset;">
                <table class="table table-responsive-md table-hover table2 VA-middle">
                    <div class="container">
                        <div class="row justify-content-left">
                            <div class="col-2">
                                <button role="button" class="btn btn-shadow btn-block btn-color11-o" style="background-color:#97dded" onclick="location.href='@Url.Action("LabelCreate", "System")'">+ 新增標籤</button>
                            </div>
                        </div>
                    </div>
                </table>
            </div>
        </div>
    </div>

    <div class="card whiteBG mb-4 pattern-F colorset_3">
        <div class="card-body">
            <div class="table-responsive" style="overflow-x: unset;">
                <table class="table table-responsive-md table-hover table2 VA-middle">
                    <div class="table-responsive">
                        <table class="table table-hover" id="addnew" table-layout: fixed;>
                            <colgroup>
                                <col width="40%">
                                <col width="20%">
                                <col width="20%">
                                <col width="10%">
                                <col width="10%">
                            </colgroup>
                            <tbody>

                                @if (ViewBag.Count > 0)
                                {
                                    <tr>
                                        <th>標籤名稱</th>
                                        <th>排序</th>
                                        <th>是否啟用</th>
                                        <th></th>
                                        <th></th>
                                    </tr>

                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.LabelName</td>
                                            <td>@item.Sort</td>
                                            <td>@item.Status</td>
                                            <td>
                                                <a role="button" class="btn btn-shadow btn-color11-d btn-block" style="background-color:#97dded;" asp-action="LabelEdit" asp-route-id="@item.LabelId">
                                                    修改<i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="javascript:void(0)" role="button" class="btn btn-shadow btn-color11-d btn-block" style="background-color:#f97676" onclick="DeleteLabel('@item.LabelId')">
                                                    刪除<i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <th>查無資料</th>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </table>
            </div>
        </div>
    </div>


</div>

<script type="text/javascript">
    function DeleteLabel(Id) {
        if (confirm("確定要刪除這筆標籤嗎?")) {
            $.ajax({
                type: "POST",
                url: "/System/DeleteLabel",
                data: { "Id": Id },
                async: false,
                datatype: "json",
                success: function (data) {
                    alert("刪除成功!!");
                    window.location.href = '@Url.Action("LabelIndex", "System")';
                }
            })
        }
    }
</script>