@model IEnumerable<AppointmentSystem.Models.ViewModels.SystemModels.RoleIndexVM>
@{
    ViewData["Title"] = "權限管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card whiteBG mb-4 pattern-F colorset_B">
    <div class="card-header">
        <h3 class="card-title font-weight-bold">@ViewData["Title"]</h3>
    </div>

    <div class="card whiteBG pattern-F colorset_3">
        <div class="card-body">
            <div class="table-responsive" style="overflow-x: unset;">
                <table class="table table-responsive-md table-hover table2 VA-middle">
                    <div class="container">
                        <div class="row justify-content-left">
                            <div class="col-2">
                                <button role="button" class="btn btn-shadow btn-block btn-color11-o" style="background-color:#97dded" onclick="location.href='@Url.Action("RoleCreate", "System")'">+ 新增權限</button>
                            </div>
                        </div>
                    </div>
                </table>
            </div>
        </div>
    </div>

    <div class="card whiteBG mb-4 pattern-F colorset_3">
        <div class="card-body">
            <div class="table-responsive" style="overflow-x: unset;">
                <table class="table table-responsive-md table-hover table2 VA-middle">
                    <div class="table-responsive">
                        <table class="table table-hover" id="addnew" table-layout: fixed;>
                            <colgroup>
                                <col width="40%">
                                <col width="20%">
                                <col width="10%">
                                <col width="10%">
                            </colgroup>
                            <tbody>

                                @if (ViewBag.Count > 0)
                                {
                                    <tr>
                                        <th>權限名稱</th>                                        
                                        <th>是否啟用</th>
                                        <th></th>
                                        <th></th>
                                    </tr>

                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.RoleName</td>
                                            <td>@item.Status</td>
                                            <td>
                                                <a role="button" class="btn btn-shadow btn-color11-d btn-block" style="background-color:#97dded;" asp-action="RoleEdit" asp-route-id="@item.RoleId">
                                                    修改<i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a role="button" class="btn btn-shadow btn-color11-d btn-block" style="background-color:#f97676" asp-action="RoleDefaultPermission" asp-route-id="@item.RoleId">
                                                    權限設定<i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                            <!--
                                            <td>
                                                <a href="javascript:void(0)" role="button" class="btn btn-shadow btn-color11-d btn-block" style="background-color:#f97676" onclick="DeleteQuestion('@item.RoleId')">
                                                    刪除<i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                            -->
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <th>查無資料</th>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </table>
            </div>
        </div>
    </div>


</div>