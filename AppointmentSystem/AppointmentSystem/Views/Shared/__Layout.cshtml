<!DOCTYPE html>

<header id="Header_front">
    <nav class="navbar navbar-expand-lg fixed-top" style="background-color: rgb(5, 132, 141);">
        <a class="navbar-brand" title="回首頁" style="color: white;" asp-controller="Home" asp-action="index">EK預約系統</a>
        <ul class="navbar-nav nav-top ml-auto">
            <li class="nav-item">
                <a class="nav-link" title="登出" style="color: white;" asp-area="" asp-controller="Home" asp-action="Logout">登出</a>
            </li>
        </ul>
    </nav>
</header>

<html lang="zh-Hant-TW">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewData["Title"] - EK預約系統</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/appointmentsystem.styles.css" asp-append-version="true" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="~/css/fontawesome.min.css" asp-append-version="true" />

    <!--icon font設定-->
    <link rel="stylesheet" href="~/css/all.css" asp-append-version="true" />
    <!--load all styles -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <!--自訂CSS-->
    <link rel="stylesheet" href="~/css/rwd.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sweetalert2.css" asp-append-version="true" />

    <!--自訂RWD設定-->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.min.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div id="WRAPPER" class="container-fluid">
        <!-- 內容開始 -->
        <div class="main-left menu_bg_B">
            <div class="menu-control btn-color13">
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
            </div>
            <div class="card" id="accordion" role="tablist" aria-multiselectable="true">
                @await Component.InvokeAsync("Navigation")
            </div>
        </div>
        <div class="main-right">
            <div class="card whiteBG mb-4 pattern-F colorset_B">
                @RenderBody()
            </div>
        </div>

    </div>
    <footer class="inside_footer footer-B" id="Footer_front">
        <div class="container">
            鯨明科技有限公司 Copyright © 2024 All Rights Reserved
        </div>
        <div id="gotop" class="btn-color1" title="回到最上方"><img src="~/images/icon-up.png" alt="回到最上方icon"></div>
    </footer>

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/sweetalert2.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
