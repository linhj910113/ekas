@model AppointmentSystem.Models.ViewModels.HomeModels.LoginVM

@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<div class=" row justify-content-center mb-2 pr-0 pr-md-5">
    <div class="login mx-2 col-12 col-sm-6 col-md-3 text-center">
        <h1>EK後臺系統</h1>
    </div>
</div>
<div class=" row justify-content-center mb-2 pr-0 pr-md-5">
    <div class="login mx-2 col-12 col-sm-6 col-md-3">
        <form method="post" asp-action="Login">
            <div class="form-group">
                <label for="inputAccount" class="sr-only">帳號</label>
                <input type="text" id="Account" asp-for="Account" aria-describedby="emailHelp" placeholder="請輸入帳號" required="required" class="form-control">
            </div>
            <div class="form-group">
                <label for="inputPassword" class="sr-only">密碼</label>
                <input type="password" id="Password" asp-for="Password" placeholder="請輸入密碼" required="required" class="form-control">
            </div>

            <div style="color:red;">
                @ViewBag.errMsg
            </div>

            <br>
            <div class="row">
                <div class="col-12 mb-3">
                    <input type="submit" class="btn btn-color1 btn-block btn-radius" value="登入" />
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row justify-content-center mb-2 pr-0 pr-md-5">
    <div class="mt-3 col-9 text-center">
        <small class="">鯨明科技有限公司 Copyright © 2024 All Rights Reserved </small>
    </div>
</div>