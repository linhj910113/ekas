    <img id="desktopImage" src="~/images/CustomerIndexImage1.jpg" alt="Desktop Image" class="appointment-image desktop-image">
    <img id="mobileImage" src="~/images/CustomerIndexImage2.jpg" alt="Mobile Image" class="appointment-image mobile-image">
</div>

<div class="container content">
    <span id="AppointmentIntroductionText"></span>
</div>

<div class="appointment-table">
    <h5>已預約時段</h5>


    <table class="table table-bordered">
        @if (ViewBag.Count > 0)
        {
            <thead>
                <tr>
                    <th>日期</th>
                    <th>時間</th>
                    <th>醫師</th>
                    <th>療程項目</th>
                    <th>操作</th>
